{{!
    @template theme_wwu2019/columns

    renders a number of percentage showing circles

    Context variables required for this template:

    Example context (json):
    {
        "progress-sections": [
            {
                "name": "Dummysection",
                "percentage": 13
            }
        ],
        "additionalrequirements": false
    }
}}

{{#pendingupdate}}
    <span class="progresspendingwarning">{{#str}}progresspendingwarning, format_progresstopics{{/str}}</span> <br>
{{/pendingupdate}}
{{#additionalrequirements}}
    <span class="progresswarning">{{# str}}additionalrequirementswarning, format_progresstopics{{/str}}</span> <br>
{{/additionalrequirements}}
<div class="progresssection">
    {{#progress-sections}}
        {{#.}}
            <div class="sectioncontainer">
                <div class="pie-wrapper progress-{{percentage}}">
                    <span class="fractionlabel">{{value}}</span>
                    <div class="pie">
                        <div class="left-side half-circle"></div>
                        <div class="right-side half-circle"></div>
                    </div>
                    <div class="background-pie"></div>
                </div>
                <div class="sectionnamelabel">{{name}}</div>
            </div>
        {{/.}}
    {{/progress-sections}}
</div>